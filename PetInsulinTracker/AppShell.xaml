<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PetInsulinTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PetInsulinTracker.Views"
    Title="Pet Insulin Tracker">

    <TabBar>
        <ShellContent
            Title="My Pets"
            ContentTemplate="{DataTemplate views:PetListPage}"
            Route="PetListPage" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
