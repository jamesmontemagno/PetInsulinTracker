<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Palette -->
    <Color x:Key="Primary">#AD1457</Color>
    <Color x:Key="PrimaryDark">#EC407A</Color>
    <Color x:Key="PrimaryDarkText">#3D1A28</Color>
    <Color x:Key="PrimaryVariant">#880E4F</Color>
    <Color x:Key="PrimaryVariantDark">#F06292</Color>
    <Color x:Key="Secondary">#7B1FA2</Color>
    <Color x:Key="SecondaryDark">#AB47BC</Color>
    <Color x:Key="SecondaryDarkText">#7B1FA2</Color>
    <Color x:Key="Tertiary">#F4511E</Color>
    <Color x:Key="TertiaryDark">#FF7043</Color>

    <!-- Surfaces -->
    <Color x:Key="Surface">#FFF0F5</Color>
    <Color x:Key="SurfaceDark">#2A1820</Color>
    <Color x:Key="Background">#FCE4EC</Color>
    <Color x:Key="BackgroundDark">#1A1015</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardBackgroundDark">#352028</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#3D1A28</Color>
    <Color x:Key="TextPrimaryDark">#F2D6E0</Color>
    <Color x:Key="TextSecondary">#8C6B78</Color>
    <Color x:Key="TextSecondaryDark">#B8909D</Color>

    <!-- Semantic -->
    <Color x:Key="Success">#5B9A6F</Color>
    <Color x:Key="SuccessDark">#6BAD7F</Color>
    <Color x:Key="Danger">#D94F4F</Color>
    <Color x:Key="DangerDark">#E86565</Color>
    <Color x:Key="Warning">#AD1457</Color>

    <!-- Shell / Navigation -->
    <Color x:Key="ShellBackground">#880E4F</Color>
    <Color x:Key="ShellBackgroundDark">#150810</Color>
    <Color x:Key="ShellForeground">#FFFFFF</Color>
    <Color x:Key="ShellForegroundDark">#F2D6E0</Color>

    <!-- Legacy compat keys used by existing views -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1A1015</Color>
    <Color x:Key="MidnightBlue">#3D1A28</Color>
    <Color x:Key="Magenta">#AD1457</Color>

    <!-- Dividers -->
    <Color x:Key="Divider">#E8D0D8</Color>
    <Color x:Key="DividerDark">#3D2830</Color>

    <!-- Grays (berry-tinted) -->
    <Color x:Key="Gray100">#F0E0E6</Color>
    <Color x:Key="Gray200">#E0CCD4</Color>
    <Color x:Key="Gray300">#C4A8B3</Color>
    <Color x:Key="Gray400">#A88C96</Color>
    <Color x:Key="Gray500">#8C6B78</Color>
    <Color x:Key="Gray600">#6B4F5A</Color>
    <Color x:Key="Gray900">#3D1A28</Color>
    <Color x:Key="Gray950">#2A1018</Color>

    <!-- Resolved theme keys (updated at runtime by ThemeService) -->
    <Color x:Key="PageBackground">#FCE4EC</Color>
    <Color x:Key="PageText">#3D1A28</Color>
    <Color x:Key="PageTextSecondary">#8C6B78</Color>
    <Color x:Key="CurrentPrimary">#AD1457</Color>
    <Color x:Key="CurrentSecondary">#7B1FA2</Color>
    <Color x:Key="CurrentCardBackground">#FFFFFF</Color>
    <Color x:Key="CurrentSurface">#FFF0F5</Color>
    <Color x:Key="CurrentDivider">#E8D0D8</Color>
    <Color x:Key="CurrentShellBackground">#880E4F</Color>
    <Color x:Key="CurrentShellForeground">#FFFFFF</Color>
    <Color x:Key="CurrentDanger">#D94F4F</Color>
    <Color x:Key="CurrentSuccess">#5B9A6F</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>