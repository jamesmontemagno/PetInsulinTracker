         ════════════════════════════════════════════════════ -->

    <Style TargetType="Frame" x:Key="FormFieldStyle">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Divider}, Dark={StaticResource DividerDark}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,4" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style TargetType="Label" x:Key="FormLabelStyle">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="4,0,0,4" />
    </Style>

    <!-- ════════════════════════════════════════════════════
         NAMED STYLES — Status & Badges
         ════════════════════════════════════════════════════ -->

    <Style TargetType="Border" x:Key="BadgeStyle">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style TargetType="Border" x:Key="SuccessBadgeStyle" BasedOn="{StaticResource BadgeStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Success}, Dark={StaticResource SuccessDark}}" />
    </Style>

    <Style TargetType="Border" x:Key="DangerBadgeStyle" BasedOn="{StaticResource BadgeStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Danger}, Dark={StaticResource DangerDark}}" />
    </Style>

    <Style TargetType="Label" x:Key="BadgeTextStyle">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="11" />
    </Style>

    <!-- ════════════════════════════════════════════════════
         NAMED STYLES — Pro Tips / Info boxes
         ════════════════════════════════════════════════════ -->

    <Style TargetType="Border" x:Key="InfoBoxStyle">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFF3E0, Dark=#3D2C1E}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style TargetType="Border" x:Key="WarningBoxStyle">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFF8E1, Dark=#3D3218}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#F9A825, Dark=#FFD54F}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- ════════════════════════════════════════════════════
         NAMED STYLES — Avatar / Pet Icon
         ════════════════════════════════════════════════════ -->

    <Style TargetType="Border" x:Key="AvatarStyle">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="WidthRequest" Value="48" />
        <Setter Property="StrokeShape" Value="RoundRectangle 24" />
    </Style>

    <Style TargetType="Label" x:Key="AvatarTextStyle">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
