        </Setter>
    </Style>

    <Style TargetType="Border" x:Key="CardStyleElevated" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray900Brush}, Dark={StaticResource BlackBrush}}"
