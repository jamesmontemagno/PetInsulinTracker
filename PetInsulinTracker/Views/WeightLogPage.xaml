<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:models="clr-namespace:PetInsulinTracker.Models"
             xmlns:controls="clr-namespace:PetInsulinTracker.Controls"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PetInsulinTracker.Views.WeightLogPage"
             x:DataType="vm:WeightLogViewModel"
             Title="Weight Log"
             BackgroundColor="{DynamicResource PageBackground}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Command="{Binding OpenAddLogCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="{mi:Fluent Add24}" Color="{DynamicResource PageText}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="12">

            <!-- Chart Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="12">
            <!-- Weight Chart -->
            <Border Style="{StaticResource CardStyle}" Padding="8"
                    IsVisible="{Binding ChartData.Count, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Weight Trend" Style="{StaticResource SectionHeaderStyle}" Margin="8,4,0,0" />
                    <controls:WeightChart HeightRequest="200"
                                          DataPoints="{Binding ChartData}"
                                          Labels="{Binding ChartLabels}"
                                          LineColor="{DynamicResource CurrentPrimary}"
                                          TextColor="{DynamicResource PageTextSecondary}" />
                    <Label Text="{Binding TrendText}" FontSize="15" FontFamily="OpenSansSemibold"
                           HorizontalOptions="Center"
                           TextColor="{DynamicResource CurrentPrimary}"
                           IsVisible="{Binding TrendText, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                </VerticalStackLayout>
            </Border>

            </VerticalStackLayout>

            <!-- History -->
            <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">
            <Label Text="HISTORY" Style="{StaticResource OverlineStyle}" Margin="0,8,0,0" />

                 <Label Text="No history yet"
                     Style="{StaticResource SubtleTextStyle}" FontSize="14"
                     HorizontalTextAlignment="Center"
                     IsVisible="{Binding Logs.Count, Converter={StaticResource EqualityConverter}, ConverterParameter=0}" />

                    <Button Text="Add your first entry"
                        Command="{Binding OpenAddLogCommand}"
                        Style="{StaticResource OutlineButtonStyle}"
                        HorizontalOptions="Center"
                        IsVisible="{Binding Logs.Count, Converter={StaticResource EqualityConverter}, ConverterParameter=0}" />

            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Logs}"
                                 Spacing="8">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:WeightLog">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="{DynamicResource CurrentDanger}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WeightLogViewModel}}, x:DataType=vm:WeightLogViewModel, Path=DeleteLogCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Style="{StaticResource CardStyle}">
                                <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                    <Border Grid.Column="0"
                                            BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A2A3D}"
                                            StrokeThickness="0" StrokeShape="RoundRectangle 10"
                                            HeightRequest="40" WidthRequest="40">
                                        <mi:MauiIcon Icon="{mi:Fluent Scales24}" IconSize="22" IconColor="{DynamicResource PageText}" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label FontFamily="OpenSansSemibold" FontSize="15">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Weight" />
                                                    <Binding Path="Unit" />
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="{Binding RecordedAt, StringFormat='{0:d}'}"
                                                   Style="{StaticResource SubtleTextStyle}" />
                                            <Label Text="{Binding LoggedBy, StringFormat='Â· {0}'}"
                                                   Style="{StaticResource SubtleTextStyle}"
                                                   IsVisible="{Binding LoggedBy, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding Notes}"
                                               Style="{StaticResource SubtleTextStyle}"
                                               IsVisible="{Binding Notes, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                    </VerticalStackLayout>
                                    <mi:MauiIcon Grid.Column="2" VerticalOptions="Start"
                                                 Icon="{mi:Fluent CloudCheckmark24}" IconSize="16"
                                                 IconColor="{DynamicResource CurrentSuccess}"
                                                 IsVisible="{Binding IsSynced}" />
                                    <mi:MauiIcon Grid.Column="2" VerticalOptions="Start"
                                                 Icon="{mi:Fluent CloudArrowUp24}" IconSize="16"
                                                 IconColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                 IsVisible="{Binding IsSynced, Converter={StaticResource InvertedBoolConverter}}" />
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            </VerticalStackLayout>
            </ScrollView>
    </Grid>

</ContentPage>
