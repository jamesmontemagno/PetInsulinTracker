<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:models="clr-namespace:PetInsulinTracker.Models"
             x:Class="PetInsulinTracker.Views.WeightLogPage"
             x:DataType="vm:WeightLogViewModel"
             Title="Weight Log">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Log New Entry -->
            <Label Text="Log Weight" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <Entry Grid.Column="0" Text="{Binding Weight}" Keyboard="Numeric"
                       Placeholder="Weight" />
                <Label Grid.Column="1" Text="{Binding Unit}" FontSize="16"
                       VerticalOptions="Center" />
            </Grid>

            <Label Text="Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding LogDate}" />

            <Label Text="Notes" FontAttributes="Bold" />
            <Entry Text="{Binding Notes}" Placeholder="Optional notes" />

            <Button Text="Save" Command="{Binding SaveLogCommand}" HorizontalOptions="Fill" />

            <!-- Trend -->
            <Label Text="{Binding TrendText}" FontSize="16" FontAttributes="Bold"
                   HorizontalOptions="Center" Margin="0,8"
                   IsVisible="{Binding TrendText, Converter={StaticResource IsNotNullOrEmptyConverter}}" />

            <!-- History -->
            <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,8" />
            <Label Text="History" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <CollectionView ItemsSource="{Binding Logs}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:WeightLog">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WeightLogViewModel}}, Path=DeleteLogCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Padding="12" Margin="0,4" CornerRadius="8" HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="2">
                                        <Label FontAttributes="Bold">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Weight" />
                                                    <Binding Path="Unit" />
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                        <Label Text="{Binding RecordedAt, StringFormat='{0:d}'}"
                                               FontSize="12" TextColor="{StaticResource Gray500}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
