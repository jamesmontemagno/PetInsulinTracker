<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="PetInsulinTracker.Views.AddEditPetPage"
             x:DataType="vm:AddEditPetViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="{DynamicResource PageBackground}">

    <Grid>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Pet Photo Section -->
            <Label Text="PET PHOTO" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                    <!-- Photo Preview -->
                    <Border StrokeShape="RoundRectangle 50"
                            StrokeThickness="3"
                            Stroke="{DynamicResource CurrentPrimary}"
                            HeightRequest="100" WidthRequest="100"
                            HorizontalOptions="Center">
                        <Grid>
                            <mi:MauiIcon Icon="{mi:Fluent CameraAdd20}" IconSize="40" IconColor="{DynamicResource PageTextSecondary}"
                                   HorizontalOptions="Center" VerticalOptions="Center"
                                   IsVisible="{Binding PhotoPreviewSource, Converter={StaticResource IsNotNullOrEmptyConverter}, ConverterParameter=invert}" />
                            <Image Source="{Binding PhotoPreviewSource}"
                                   Aspect="AspectFill"
                                   IsVisible="{Binding PhotoPreviewSource, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                        </Grid>
                    </Border>
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Button Text="Choose Photo" Command="{Binding PickPhotoCommand}"
                                Style="{StaticResource OutlineButtonStyle}"
                                FontSize="13" Padding="16,8" />
                        <Button Text="Take Photo" Command="{Binding TakePhotoCommand}"
                                Style="{StaticResource OutlineButtonStyle}"
                                FontSize="13" Padding="16,8" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Basic Info Section -->
            <Label Text="BASIC INFORMATION" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Pet Name" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Name}" Placeholder="e.g., Whiskers"
                               SemanticProperties.Description="Pet name" />
                        <Label Text="Required to save" FontSize="12" TextColor="{DynamicResource Tertiary}"
                               IsVisible="{Binding Name, Converter={StaticResource IsNotNullOrEmptyConverter}, ConverterParameter=invert}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Species" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding SpeciesOptions}"
                                SelectedItem="{Binding Species}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Breed" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Breed}" Placeholder="e.g., Tabby, Labrador" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Date of Birth" Style="{StaticResource FormLabelStyle}" />
                        <DatePicker Date="{Binding DateOfBirth}" MaximumDate="{x:Static sys:DateTime.Today}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Weight Section -->
            <Label Text="WEIGHT" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="Goal Weight" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding CurrentWeight}" Keyboard="Numeric"
                               Placeholder="Weight" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label Text="Unit" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding WeightUnitOptions}"
                                SelectedItem="{Binding WeightUnit}" WidthRequest="80" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Feeding Defaults Section -->
            <Label Text="FEEDING DEFAULTS" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Food Name" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding DefaultFoodName}" Placeholder="e.g., Royal Canin Diabetic" />
                    </VerticalStackLayout>
                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Amount per Meal" Style="{StaticResource FormLabelStyle}" />
                            <Entry Text="{Binding DefaultFoodAmount}" Keyboard="Numeric" Placeholder="e.g., 0.5" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Unit" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding FoodUnitOptions}" SelectedItem="{Binding DefaultFoodUnit}" WidthRequest="90" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="4">
                            <Label Text="Type" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding FoodTypeOptions}" SelectedItem="{Binding DefaultFoodType}" WidthRequest="80" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Insulin Section -->
            <Label Text="INSULIN INFORMATION" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Pet takes insulin" Style="{StaticResource FormLabelStyle}"
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1" IsToggled="{Binding TakesInsulin}"
                                SemanticProperties.Description="Toggle insulin tracking" />
                    </Grid>
                    <VerticalStackLayout Spacing="12" IsVisible="{Binding TakesInsulin}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Insulin Type" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding InsulinTypeOptions}"
                                    SelectedItem="{Binding InsulinType}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Concentration" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding ConcentrationOptions}"
                                    SelectedItem="{Binding InsulinConcentration}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Current Dose (IU)" Style="{StaticResource FormLabelStyle}" />
                            <Entry Text="{Binding CurrentDoseIU}" Keyboard="Numeric"
                                   Placeholder="e.g., 2.0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Medication Section -->
            <Label Text="MEDICATION" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Pet takes medication" Style="{StaticResource FormLabelStyle}"
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1" IsToggled="{Binding TakesMedication}"
                                SemanticProperties.Description="Toggle medication tracking" />
                    </Grid>
                    <VerticalStackLayout Spacing="4" IsVisible="{Binding TakesMedication}">
                        <Label Text="Default Medication" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding PetMedication}" 
                               Placeholder="e.g., Gabapentin 100mg twice daily"
                               SemanticProperties.Description="Pet medication information" />
                        <Label Text="This will be used as the default when logging medications"
                               FontSize="12"
                               TextColor="{DynamicResource PageTextSecondary}"
                               Margin="0,4,0,0" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Button Text="Save" Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,8" HorizontalOptions="Fill"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InvertedBoolConverter}}"
                    SemanticProperties.Hint="Save pet information" />

        </VerticalStackLayout>
    </ScrollView>

    <!-- Saving overlay -->
    <Grid IsVisible="{Binding IsSaving}"
          BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
          InputTransparent="False">
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="12">
            <ActivityIndicator IsRunning="{Binding IsSaving}"
                               Color="{DynamicResource CurrentPrimary}"
                               HeightRequest="48" WidthRequest="48" />
            <Label Text="{Binding SavingStatus}"
                   HorizontalOptions="Center"
                   FontSize="16"
                   TextColor="{DynamicResource PageText}" />
        </VerticalStackLayout>
    </Grid>

    </Grid>
</ContentPage>
