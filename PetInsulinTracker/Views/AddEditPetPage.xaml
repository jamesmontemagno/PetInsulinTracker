<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             x:Class="PetInsulinTracker.Views.AddEditPetPage"
             x:DataType="vm:AddEditPetViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Basic Info Section -->
            <Label Text="BASIC INFORMATION" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Pet Name" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Name}" Placeholder="e.g., Whiskers"
                               SemanticProperties.Description="Pet name" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Species" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding SpeciesOptions}"
                                SelectedItem="{Binding Species}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Breed" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Breed}" Placeholder="e.g., Tabby, Labrador" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Date of Birth" Style="{StaticResource FormLabelStyle}" />
                        <DatePicker Date="{Binding DateOfBirth}" MaximumDate="{x:Static sys:DateTime.Today}"
                                    xmlns:sys="clr-namespace:System;assembly=mscorlib" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Insulin Section -->
            <Label Text="INSULIN INFORMATION" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Insulin Type" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding InsulinTypeOptions}"
                                SelectedItem="{Binding InsulinType}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Concentration" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding ConcentrationOptions}"
                                SelectedItem="{Binding InsulinConcentration}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Current Dose (IU)" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding CurrentDoseIU}" Keyboard="Numeric"
                               Placeholder="e.g., 2.0" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Weight Section -->
            <Label Text="WEIGHT" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="Current Weight" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding CurrentWeight}" Keyboard="Numeric"
                               Placeholder="Weight" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label Text="Unit" Style="{StaticResource FormLabelStyle}" />
                        <Picker ItemsSource="{Binding WeightUnitOptions}"
                                SelectedItem="{Binding WeightUnit}" WidthRequest="80" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Button Text="Save" Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,8" HorizontalOptions="Fill"
                    SemanticProperties.Hint="Save pet information" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
