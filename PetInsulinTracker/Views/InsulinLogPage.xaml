<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:models="clr-namespace:PetInsulinTracker.Models"
             x:Class="PetInsulinTracker.Views.InsulinLogPage"
             x:DataType="vm:InsulinLogViewModel"
             Title="Insulin Log">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Log New Entry -->
            <Label Text="Log Insulin Shot" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Dose (IU)" FontAttributes="Bold" />
                    <Entry Text="{Binding DoseIU}" Keyboard="Numeric" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="Injection Site" FontAttributes="Bold" />
                    <Entry Text="{Binding InjectionSite}" Placeholder="e.g., scruff" />
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Date" FontAttributes="Bold" />
                    <DatePicker Date="{Binding LogDate}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="Time" FontAttributes="Bold" />
                    <TimePicker Time="{Binding LogTime}" />
                </VerticalStackLayout>
            </Grid>

            <Label Text="Notes" FontAttributes="Bold" />
            <Entry Text="{Binding Notes}" Placeholder="Optional notes" />

            <Button Text="Save" Command="{Binding SaveLogCommand}" HorizontalOptions="Fill" />

            <!-- History -->
            <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,8" />
            <Label Text="History" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <CollectionView ItemsSource="{Binding Logs}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:InsulinLog">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:InsulinLogViewModel}}, Path=DeleteLogCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Padding="12" Margin="0,4" CornerRadius="8" HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="2">
                                        <Label FontAttributes="Bold"
                                               Text="{Binding DoseIU, StringFormat='{0} IU'}" />
                                        <Label Text="{Binding AdministeredAt, StringFormat='{0:g}'}"
                                               FontSize="12" TextColor="{StaticResource Gray500}" />
                                        <Label Text="{Binding InjectionSite}"
                                               FontSize="12" TextColor="{StaticResource Gray500}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
