<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:models="clr-namespace:PetInsulinTracker.Models"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PetInsulinTracker.Views.InsulinLogPage"
             x:DataType="vm:InsulinLogViewModel"
             Title="Insulin Log"
             BackgroundColor="{DynamicResource PageBackground}">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="12">

            <!-- Log New Entry -->
            <VerticalStackLayout Grid.Row="0" Spacing="12">
            <Label Text="LOG INSULIN SHOT" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Dose (IU)" Style="{StaticResource FormLabelStyle}" />
                            <Entry Text="{Binding DoseIU}" Keyboard="Numeric" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Injection Site" Style="{StaticResource FormLabelStyle}" />
                            <Entry Text="{Binding InjectionSite}" Placeholder="e.g., scruff" />
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Date" Style="{StaticResource FormLabelStyle}" />
                            <DatePicker Date="{Binding LogDate}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Time" Style="{StaticResource FormLabelStyle}" />
                            <TimePicker Time="{Binding LogTime}" />
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Notes" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Notes}" Placeholder="Optional notes" />
                    </VerticalStackLayout>

                    <Button Text="Save" Command="{Binding SaveLogCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalOptions="Fill" />
                    <HorizontalStackLayout Spacing="6" IsVisible="{Binding IsSyncing}" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsSyncing}" HeightRequest="14" WidthRequest="14"
                                           Color="{DynamicResource Primary}" />
                        <Label Text="Syncingâ€¦" Style="{StaticResource SubtleTextStyle}" FontSize="12" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            </VerticalStackLayout>

            <!-- History -->
            <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">
            <Label Text="HISTORY" Style="{StaticResource OverlineStyle}" Margin="0,8,0,0" />

            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Logs}"
                                 Spacing="8">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:InsulinLog">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="{DynamicResource CurrentDanger}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:InsulinLogViewModel}}, x:DataType=vm:InsulinLogViewModel, Path=DeleteLogCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Style="{StaticResource CardStyle}">
                                <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                    <Border Grid.Column="0"
                                            BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#3D2C1E}"
                                            StrokeThickness="0" StrokeShape="RoundRectangle 10"
                                            HeightRequest="40" WidthRequest="40">
                                        <mi:MauiIcon Icon="{mi:Fluent Syringe24}" IconSize="22" IconColor="{DynamicResource PageText}" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label FontFamily="OpenSansSemibold" FontSize="15"
                                               Text="{Binding DoseIU, StringFormat='{0} IU'}" />
                                        <Label Text="{Binding AdministeredAt, StringFormat='{0:g}'}"
                                               Style="{StaticResource SubtleTextStyle}" />
                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="{Binding InjectionSite}"
                                                   Style="{StaticResource SubtleTextStyle}" />
                                            <Label Text="{Binding LoggedBy, StringFormat='by {0}'}"
                                                   Style="{StaticResource SubtleTextStyle}"
                                                   IsVisible="{Binding LoggedBy, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    <mi:MauiIcon Grid.Column="2" VerticalOptions="Start"
                                                 Icon="{mi:Fluent CloudCheckmark24}" IconSize="16"
                                                 IconColor="{DynamicResource CurrentSuccess}"
                                                 IsVisible="{Binding IsSynced}" />
                                    <mi:MauiIcon Grid.Column="2" VerticalOptions="Start"
                                                 Icon="{mi:Fluent CloudArrowUp24}" IconSize="16"
                                                 IconColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                 IsVisible="{Binding IsSynced, Converter={StaticResource InvertedBoolConverter}}" />
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            </VerticalStackLayout>
            </ScrollView>
    </Grid>

</ContentPage>
