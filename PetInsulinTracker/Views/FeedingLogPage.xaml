<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:models="clr-namespace:PetInsulinTracker.Models"
             x:Class="PetInsulinTracker.Views.FeedingLogPage"
             x:DataType="vm:FeedingLogViewModel"
             Title="Feeding Log">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Log New Entry -->
            <Label Text="Log Feeding" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <Label Text="Food Name" FontAttributes="Bold" />
            <Entry Text="{Binding FoodName}" Placeholder="e.g., Hill's w/d" />

            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                <Entry Grid.Column="0" Text="{Binding Amount}" Keyboard="Numeric" Placeholder="Amount" />
                <Picker Grid.Column="1" ItemsSource="{Binding UnitOptions}"
                        SelectedItem="{Binding Unit}" WidthRequest="90" />
                <Picker Grid.Column="2" ItemsSource="{Binding FoodTypeOptions}"
                        SelectedItem="{Binding FoodType}" WidthRequest="80" />
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Date" FontAttributes="Bold" />
                    <DatePicker Date="{Binding LogDate}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="Time" FontAttributes="Bold" />
                    <TimePicker Time="{Binding LogTime}" />
                </VerticalStackLayout>
            </Grid>

            <Label Text="Notes" FontAttributes="Bold" />
            <Entry Text="{Binding Notes}" Placeholder="Optional notes" />

            <Button Text="Save" Command="{Binding SaveLogCommand}" HorizontalOptions="Fill" />

            <!-- History -->
            <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,8" />
            <Label Text="History" FontSize="18" FontAttributes="Bold"
                   SemanticProperties.HeadingLevel="Level2" />

            <CollectionView ItemsSource="{Binding Logs}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:FeedingLog">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FeedingLogViewModel}}, Path=DeleteLogCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Padding="12" Margin="0,4" CornerRadius="8" HasShadow="True">
                                <VerticalStackLayout Spacing="2">
                                    <Label FontAttributes="Bold">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} â€” {1} {2} ({3})">
                                                <Binding Path="FoodName" />
                                                <Binding Path="Amount" />
                                                <Binding Path="Unit" />
                                                <Binding Path="FoodType" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                    <Label Text="{Binding FedAt, StringFormat='{0:g}'}"
                                           FontSize="12" TextColor="{StaticResource Gray500}" />
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
