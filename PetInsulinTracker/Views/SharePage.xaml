<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:dto="clr-namespace:PetInsulinTracker.Shared.DTOs;assembly=PetInsulinTracker.Shared"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PetInsulinTracker.Views.SharePage"
             x:DataType="vm:ShareViewModel"
             Title="Share Pet"
             BackgroundColor="{DynamicResource PageBackground}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Create Share Code"
                     Command="{Binding CreateShareCodeCommand}"
                     IsEnabled="{Binding CanCreateShareCode}">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="{mi:Fluent Add24}" Color="{DynamicResource PageText}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <DataTemplate x:Key="ShareCodeCardTemplate" x:DataType="dto:ShareCodeDto">
            <Border Style="{StaticResource CardStyleElevated}" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Style="{StaticResource SubtleTextStyle}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding AccessLevel}" Value="full">
                                <Setter Property="Text" Value="Full Access Code" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding AccessLevel}" Value="guest">
                                <Setter Property="Text" Value="Guest Access Code" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Border BackgroundColor="{DynamicResource CurrentSurface}"
                            StrokeThickness="2"
                            Stroke="{DynamicResource CurrentPrimary}"
                            StrokeShape="RoundRectangle 12"
                            Padding="18,12"
                            HorizontalOptions="Center">
                        <Label Text="{Binding Code}" FontSize="28" FontFamily="OpenSansSemibold"
                               CharacterSpacing="5" HorizontalOptions="Center"
                               TextColor="{DynamicResource CurrentPrimary}"
                               SemanticProperties.Description="Share code" />
                    </Border>
                    <Label Text="{Binding CreatedByName, StringFormat='Created by {0}'}"
                           Style="{StaticResource SubtleTextStyle}" FontSize="12" />
                    <Label Text="{Binding CreatedAt, StringFormat='Created {0:MMM d, yyyy}'}"
                           Style="{StaticResource SubtleTextStyle}" FontSize="12" />
                    <HorizontalStackLayout Spacing="12">
                        <Button Text="Copy"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShareViewModel}}, Path=CopyShareCodeCommand}"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource QuickActionButtonStyle}" />
                        <Button Text="Delete"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShareViewModel}}, Path=DeleteShareCodeCommand}"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource OutlineButtonStyle}"
                                TextColor="Red" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </DataTemplate>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Share Codes Section -->
            <Label Text="SHARE CODES" Style="{StaticResource OverlineStyle}" />

            <ActivityIndicator IsRunning="{Binding IsLoadingCodes}"
                               IsVisible="{Binding IsLoadingCodes}"
                               HorizontalOptions="Center" />

            <Label Text="No share codes yet. Tap Create Share Code to get started."
                   Style="{StaticResource SubtleTextStyle}" FontSize="14"
                   HorizontalTextAlignment="Center"
                   IsVisible="{Binding HasAnyCodes, Converter={StaticResource InvertedBoolConverter}}" />

            <VerticalStackLayout Spacing="12"
                                 IsVisible="{Binding HasFullAccessCodes}">
                <Label Text="FULL ACCESS" Style="{StaticResource OverlineStyle}" />
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding FullAccessCodes}"
                                     BindableLayout.ItemTemplate="{StaticResource ShareCodeCardTemplate}"
                                     Spacing="8" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12"
                                 IsVisible="{Binding HasGuestAccessCodes}">
                <Label Text="GUEST ACCESS" Style="{StaticResource OverlineStyle}" />
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding GuestAccessCodes}"
                                     BindableLayout.ItemTemplate="{StaticResource ShareCodeCardTemplate}"
                                     Spacing="8" />
            </VerticalStackLayout>

            <Button Text="Refresh Codes"
                    Command="{Binding RefreshShareCodesCommand}"
                    Style="{StaticResource OutlineButtonStyle}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsOwnerOrFull}" />

            <Label Text="Full Access: See all logs and pet info (family members)&#x0a;Guest Access: See pet info, log entries, but not other people's logs (pet sitters)"
                   Style="{StaticResource SubtleTextStyle}" FontSize="12"
                   HorizontalTextAlignment="Center" />

            <!-- People with Access (owner only) -->
            <VerticalStackLayout Spacing="12"
                                 IsVisible="{Binding IsOwnerOrFull}">
                <BoxView Style="{StaticResource DividerStyle}" Margin="0,8" />
                <Label Text="PEOPLE WITH ACCESS" Style="{StaticResource OverlineStyle}" />

                <ActivityIndicator IsRunning="{Binding IsLoadingUsers}"
                                   IsVisible="{Binding IsLoadingUsers}"
                                   HorizontalOptions="Center" />

                <Label Text="No one has redeemed a share code yet."
                       Style="{StaticResource SubtleTextStyle}" FontSize="14"
                       HorizontalTextAlignment="Center"
                       IsVisible="False">
                    <Label.Triggers>
                        <MultiTrigger TargetType="Label">
                            <MultiTrigger.Conditions>
                                <BindingCondition Binding="{Binding SharedUsers.Count}" Value="0" />
                                <BindingCondition Binding="{Binding IsLoadingUsers}" Value="False" />
                                <BindingCondition Binding="{Binding HasAnyCodes}" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="IsVisible" Value="True" />
                        </MultiTrigger>
                    </Label.Triggers>
                </Label>

                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SharedUsers}"
                                     Spacing="8"
                                     IsVisible="{Binding IsLoadingUsers, Converter={StaticResource InvertedBoolConverter}}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="dto:SharedUserDto">
                            <Border Style="{StaticResource CardStyle}" Margin="0,4">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Padding="4" ColumnSpacing="12">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           FontSize="16" FontFamily="OpenSansSemibold"
                                           SemanticProperties.HeadingLevel="Level3" />
                                    <Label Grid.Row="1" Grid.Column="0"
                                           FontSize="12">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding AccessLevel}" />
                                                <Span Text=" Â· " />
                                                <Span Text="{Binding RedeemedAt, StringFormat='{0:MMM d, yyyy}'}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                            Text="Revoke"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShareViewModel}}, x:DataType=vm:ShareViewModel, Path=RevokeAccessCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource QuickActionButtonStyle}"
                                            VerticalOptions="Center"
                                            IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:ShareViewModel}}, x:DataType=vm:ShareViewModel, Path=IsOwner}"
                                            IsEnabled="{Binding IsRevoked, Converter={StaticResource InvertedBoolConverter}}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsRevoked}" Value="True">
                                                <Setter Property="Text" Value="Revoked" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <Button Text="Refresh"
                        Command="{Binding LoadSharedUsersCommand}"
                        Style="{StaticResource OutlineButtonStyle}"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Status -->
            <Label Text="{Binding StatusMessage}" FontSize="14" FontFamily="OpenSansSemibold"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource CurrentPrimary}"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
