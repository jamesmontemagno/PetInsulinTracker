<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             xmlns:dto="clr-namespace:PetInsulinTracker.Shared.DTOs;assembly=PetInsulinTracker.Shared"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PetInsulinTracker.Views.SharePage"
             x:DataType="vm:ShareViewModel"
             Title="Share Pet"
             BackgroundColor="{DynamicResource PageBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Share Codes Section -->
            <Label Text="SHARE CODES" Style="{StaticResource OverlineStyle}" />

            <!-- Full Access Code Card -->
            <Border Style="{StaticResource CardStyleElevated}"
                    Padding="24"
                    IsVisible="{Binding FullAccessCode, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Label Text="Full Access Code" Style="{StaticResource SubtleTextStyle}"
                           HorizontalOptions="Center" />
                    <Border BackgroundColor="{DynamicResource CurrentSurface}"
                            StrokeThickness="2"
                            Stroke="{DynamicResource CurrentPrimary}"
                            StrokeShape="RoundRectangle 12"
                            Padding="24,16"
                            HorizontalOptions="Center">
                        <Label Text="{Binding FullAccessCode}" FontSize="36" FontFamily="OpenSansSemibold"
                               CharacterSpacing="6" HorizontalOptions="Center"
                               TextColor="{DynamicResource CurrentPrimary}"
                               SemanticProperties.Description="Full access share code" />
                    </Border>
                    <Button Text="Copy Code" Command="{Binding CopyFullAccessCodeCommand}"
                            Style="{StaticResource QuickActionButtonStyle}"
                            HorizontalOptions="Center" />
                    <Label Text="For family members — full access to all logs and pet info."
                           Style="{StaticResource SubtleTextStyle}" FontSize="13"
                           HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                    <Button Text="Delete Code" Command="{Binding DeleteFullAccessCodeCommand}"
                            Style="{StaticResource OutlineButtonStyle}"
                            HorizontalOptions="Center"
                            TextColor="Red" />
                </VerticalStackLayout>
            </Border>

            <!-- Guest Access Code Card -->
            <Border Style="{StaticResource CardStyleElevated}"
                    Padding="24"
                    IsVisible="{Binding GuestAccessCode, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Label Text="Guest Access Code" Style="{StaticResource SubtleTextStyle}"
                           HorizontalOptions="Center" />
                    <Border BackgroundColor="{DynamicResource CurrentSurface}"
                            StrokeThickness="2"
                            Stroke="{DynamicResource CurrentPrimary}"
                            StrokeShape="RoundRectangle 12"
                            Padding="24,16"
                            HorizontalOptions="Center">
                        <Label Text="{Binding GuestAccessCode}" FontSize="36" FontFamily="OpenSansSemibold"
                               CharacterSpacing="6" HorizontalOptions="Center"
                               TextColor="{DynamicResource CurrentPrimary}"
                               SemanticProperties.Description="Guest access share code" />
                    </Border>
                    <Button Text="Copy Code" Command="{Binding CopyGuestAccessCodeCommand}"
                            Style="{StaticResource QuickActionButtonStyle}"
                            HorizontalOptions="Center" />
                    <Label Text="For pet sitters — can view pet info and log entries, but not other people's logs."
                           Style="{StaticResource SubtleTextStyle}" FontSize="13"
                           HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                    <Button Text="Delete Code" Command="{Binding DeleteGuestAccessCodeCommand}"
                            Style="{StaticResource OutlineButtonStyle}"
                            HorizontalOptions="Center"
                            TextColor="Red" />
                </VerticalStackLayout>
            </Border>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" Text="Full Access"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding GenerateFullAccessCodeCommand}"
                        IsEnabled="{Binding IsGenerating, Converter={StaticResource InvertedBoolConverter}}"
                        HorizontalOptions="Fill" />
                <Button Grid.Column="1" Text="Guest Access"
                        Style="{StaticResource OutlineButtonStyle}"
                        Command="{Binding GenerateGuestAccessCodeCommand}"
                        IsEnabled="{Binding IsGenerating, Converter={StaticResource InvertedBoolConverter}}"
                        HorizontalOptions="Fill" />
            </Grid>

            <Label Text="Full Access: See all logs and pet info (family members)&#x0a;Guest Access: See pet info, log entries, but not other people's logs (pet sitters)"
                   Style="{StaticResource SubtleTextStyle}" FontSize="12"
                   HorizontalTextAlignment="Center" />

            <!-- Redeem Code -->
            <BoxView Style="{StaticResource DividerStyle}" Margin="0,8" />
            <Label Text="IMPORT A PET" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Enter a share code to import someone else's pet:"
                           Style="{StaticResource SubtleTextStyle}" FontSize="14" />
                    <Entry Text="{Binding RedeemCode}" Placeholder="e.g., ABC123"
                           CharacterSpacing="4" FontSize="22" FontFamily="OpenSansSemibold"
                           HorizontalTextAlignment="Center" MaxLength="6" />
                    <Button Text="Import Pet" Command="{Binding RedeemShareCodeCommand}"
                            IsEnabled="{Binding IsRedeeming, Converter={StaticResource InvertedBoolConverter}}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Border>

            <!-- People with Access (owner only) -->
            <VerticalStackLayout Spacing="12"
                                 IsVisible="{Binding IsOwner}">
                <BoxView Style="{StaticResource DividerStyle}" Margin="0,8" />
                <Label Text="PEOPLE WITH ACCESS" Style="{StaticResource OverlineStyle}" />

                <ActivityIndicator IsRunning="{Binding IsLoadingUsers}"
                                   IsVisible="{Binding IsLoadingUsers}"
                                   HorizontalOptions="Center" />

                <Label Text="No one has redeemed your share code yet."
                       Style="{StaticResource SubtleTextStyle}" FontSize="14"
                       HorizontalTextAlignment="Center"
                       IsVisible="False">
                    <Label.Triggers>
                        <MultiTrigger TargetType="Label">
                            <MultiTrigger.Conditions>
                                <BindingCondition Binding="{Binding SharedUsers.Count}" Value="0" />
                                <BindingCondition Binding="{Binding IsLoadingUsers}" Value="False" />
                                <BindingCondition Binding="{Binding ShareCode, Converter={StaticResource IsNotNullOrEmptyConverter}}" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="IsVisible" Value="True" />
                        </MultiTrigger>
                    </Label.Triggers>
                </Label>

                <CollectionView ItemsSource="{Binding SharedUsers}"
                                IsVisible="{Binding IsLoadingUsers, Converter={StaticResource InvertedBoolConverter}}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="dto:SharedUserDto">
                            <Border Style="{StaticResource CardStyle}" Margin="0,4">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Padding="4" ColumnSpacing="12">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           FontSize="16" FontFamily="OpenSansSemibold"
                                           SemanticProperties.HeadingLevel="Level3" />
                                    <Label Grid.Row="1" Grid.Column="0"
                                           FontSize="12">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding AccessLevel}" />
                                                <Span Text=" · " />
                                                <Span Text="{Binding RedeemedAt, StringFormat='{0:MMM d, yyyy}'}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                            Text="Revoke"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShareViewModel}}, Path=RevokeAccessCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource QuickActionButtonStyle}"
                                            VerticalOptions="Center"
                                            IsEnabled="{Binding IsRevoked, Converter={StaticResource InvertedBoolConverter}}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsRevoked}" Value="True">
                                                <Setter Property="Text" Value="Revoked" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="Refresh"
                        Command="{Binding LoadSharedUsersCommand}"
                        Style="{StaticResource OutlineButtonStyle}"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Status -->
            <Label Text="{Binding StatusMessage}" FontSize="14" FontFamily="OpenSansSemibold"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource CurrentPrimary}"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
