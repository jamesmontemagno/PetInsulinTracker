<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetInsulinTracker.ViewModels"
             x:Class="PetInsulinTracker.Views.AddFeedingLogPage"
             x:DataType="vm:FeedingLogViewModel"
             Title="Log Feeding"
             BackgroundColor="{DynamicResource PageBackground}"
             Shell.PresentationMode="ModalAnimated">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="LOG FEEDING" Style="{StaticResource OverlineStyle}" />

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Food Name" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding FoodName}" Placeholder="e.g., Hill's w/d" />
                        <Label Text="Required to save" FontSize="12" TextColor="{DynamicResource Tertiary}"
                               IsVisible="{Binding FoodName, Converter={StaticResource IsNotNullOrEmptyConverter}, ConverterParameter=invert}" />
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Amount" Style="{StaticResource FormLabelStyle}" />
                            <Entry Text="{Binding Amount}" Keyboard="Numeric" Placeholder="Amount" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Unit" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding UnitOptions}"
                                    SelectedItem="{Binding Unit}" WidthRequest="90" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="4">
                            <Label Text="Type" Style="{StaticResource FormLabelStyle}" />
                            <Picker ItemsSource="{Binding FoodTypeOptions}"
                                    SelectedItem="{Binding FoodType}" WidthRequest="80" />
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Date" Style="{StaticResource FormLabelStyle}" />
                            <DatePicker Date="{Binding LogDate}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Time" Style="{StaticResource FormLabelStyle}" />
                            <TimePicker Time="{Binding LogTime}" />
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Notes" Style="{StaticResource FormLabelStyle}" />
                        <Entry Text="{Binding Notes}" Placeholder="Optional notes" />
                    </VerticalStackLayout>

                        <Button Text="Save" Command="{Binding SaveAndCloseCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalOptions="Fill" />
                        <Button Text="Cancel" Command="{Binding CloseModalCommand}"
                            Style="{StaticResource OutlineButtonStyle}"
                            HorizontalOptions="Fill" />
                    <HorizontalStackLayout Spacing="6" IsVisible="{Binding IsSyncing}" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsSyncing}" HeightRequest="14" WidthRequest="14"
                                           Color="{DynamicResource Primary}" />
                        <Label Text="Syncing..." Style="{StaticResource SubtleTextStyle}" FontSize="12" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
